@model InAndOut.Models.Item

@{
    ViewData["Title"] = "Create Item";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Lender"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input type="text" asp-for="ItemName" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Borrower" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Lender" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 text-center row">
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-50">Go back</a>
                        </div>
                        <div class="col">
                            <input type="submit" value="Submit" class="btn btn-primary w-50" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

